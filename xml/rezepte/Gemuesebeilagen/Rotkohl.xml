<REZEPT>
  <REZEPTNAME>Rotkohl</REZEPTNAME>
  <KATEGORIE>Gem&#252;sebeilagen</KATEGORIE>
  <AUTOR>Mei&#223;ner, Christa</AUTOR>
  <BEWERTUNG>*****</BEWERTUNG>
  <ANZAHLPERSONEN>3</ANZAHLPERSONEN>
  <ZUBEREITUNGSZEIT>45 Minuten</ZUBEREITUNGSZEIT>
  <ZUTATEN>
    <ZUTAT>1 mittelgro&#223;en Rotkohl</ZUTAT>
    <ZUTAT>anderthalb Tassen Apfelsaft {optional Wasser}</ZUTAT>
    <ZUTAT>10 Essl&#246;ffel 10%- iger Essig</ZUTAT>
    <ZUTAT>1 Essl&#246;ffel Salz</ZUTAT>
    <ZUTAT>4 Essl&#246;ffel Zucker</ZUTAT>
    <ZUTAT>1 mittelgro&#223;e Zwiebel, die ganz gelassen wird.</ZUTAT>
    <ZUTAT>4 Nelken</ZUTAT>
    <ZUTAT>1 Apfel, Boskop</ZUTAT>
    <ZUTAT>&#189; Essl&#246;ffel Schmalz {optional Margarine}</ZUTAT>
  </ZUTATEN>
  <ZUBEREITUNG>
    <ITEM>Den Kohl vierteln, vom Strunk befreien und fein schneiden.</ITEM>
    <ITEM>Die Zutaten werden mit dem Kohl
    <FETT>20 Minuten&#160;</FETT>gekocht.</ITEM>
  </ZUBEREITUNG>
</REZEPT>