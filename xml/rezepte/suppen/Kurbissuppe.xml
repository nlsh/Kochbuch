<REZEPT>
  <REZEPTNAME>Kürbis- Suppe</REZEPTNAME>
  <KATEGORIE>Suppen</KATEGORIE>
  <AUTOR></AUTOR>
  <BEWERTUNG>****</BEWERTUNG>
 <ANZAHLPERSONEN></ANZAHLPERSONEN>
 <ZUBEREITUNGSZEIT></ZUBEREITUNGSZEIT>
  <ZUTATEN>
    <ZUTAT>1 Hokaido- Kürbis</ZUTAT>
    <ZUTAT>250 g Butter</ZUTAT>
    <ZUTAT>1 l Gemüsebrühe</ZUTAT>
    <ZUTAT>250 g Sahne</ZUTAT>
    <ZUTAT>2 Beutel heiße Tasse- Classic Champignon</ZUTAT>
    <ZUTAT>1 Zitrone</ZUTAT>
    <ZUTAT>Pfeffer</ZUTAT>
    <ZUTAT>Salz</ZUTAT>
    <ZUTAT>Muskatnuss</ZUTAT>
  </ZUTATEN>
  <ZUBEREITUNG>
    <ITEM>den Kürbis in Würfel schneiden und in der Butter anschmoren</ITEM>
    <ITEM>danach mit der Gemüsebrühe fein pürieren</ITEM>
    <ITEM>jetzt mit Salz, Pfeffer abschmecken</ITEM>
    <ITEM>die Beutel heiße Tasse- Classic Champignon hinzugeben</ITEM>
    <ITEM>aufkochen lassen</ITEM>
    <ITEM>Sahne hinzugeben</ITEM>
    <ITEM>zum Schluss noch mit etwas frisch gepresster Zitrone und Muskatnuss verfeinern</ITEM>
  </ZUBEREITUNG>
</REZEPT>